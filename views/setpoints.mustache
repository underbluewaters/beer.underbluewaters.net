<!doctype html>
<html lang=en>
  <head>
    <meta charset=utf-8>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Beer!</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css" media="screen" charset="utf-8">
  </head>
  <body>
     <body>

    <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          <div class="masthead clearfix">
            <div class="inner">
              <ul class="nav masthead-nav">
                <li><a href="/">Home</a></li>
                <li class="active"><a href="/setpoints">Adjust Setpoints</a></li>
              </ul>
            </div>
          </div>

          <div class="inner cover">
            <form id="setpoints" action="/setpoints" method="post">
              <div class="form-group">
                <label for="fermentor">Fermenter</label>
                <input class="form-control" type="text" name="fermenter" value="{{setpoints.fermenter}}">
              </div>
              <div class="form-group">
                <label for="keezer">Keezer</label>
                <input class="form-control" type="text" name="keezer" value="{{setpoints.keezer}}">
              </div>
              <div class="form-group">
                <label for="holdover">Holdover</label>
                <input class="form-control" type="text" name="holdover" value="{{setpoints.holdover}}">
              </div>
              <div class="form-group">
                <label for="lagFactor">Lag Factor</label>
                <input class="form-control" type="text" name="lagFactor" value="{{setpoints.lagFactor}}">
              </div>
              <input class="btn btn-default" type="submit" name="submit" value="Submit">
            </form>
          </div>

        </div>

      </div>

    </div>
  </body>
</html>
